<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="80dp"
        android:src="@drawable/chevron_right_circle"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:id="@+id/view_all"
        android:visibility="gone"
        android:layout_height="80dp">
    </ImageView>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/white"
        android:layout_marginTop="5dp"
        android:id="@+id/cv_root"
        android:visibility="visible"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="3dp"
        app:cardCornerRadius="@dimen/dim_15"
        android:elevation="@dimen/dim_15"
        app:cardBackgroundColor="@android:color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:adjustViewBounds="true"
                android:id="@+id/img_logo"
                android:tint="@color/Black"
                android:src="@drawable/dummy_icon1"
                android:layout_height="50dp">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/dim_15"
                android:textSize="@dimen/txt_small"
                android:textAlignment="center"
                android:text="Amazein Labs 2022\nFull Body Checkup with\nVitamin Screening"
                android:layout_height="wrap_content">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_details"
                android:layout_marginTop="@dimen/dim_15"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                android:layout_width="200dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dim_15"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/light_grey_2"
                    android:id="@+id/tv_actual_price"
                    android:textSize="@dimen/txt_med"
                    android:text="\u20B9499"
                    android:fontFamily="@font/opensanssemibold"
                    android:textAlignment="center"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tv_discount_price"
                    android:textColor="@color/colorAccent"
                    android:text="\u20B9400"
                    android:textSize="30dp"
                    android:fontFamily="@font/opensansbold"
                    android:textAlignment="center"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>
            <Button
                android:layout_width="200dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="Know More -->"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/White"
                android:fontFamily="@font/opensansbold"
                android:textAllCaps="false"
                android:background="@drawable/rect_rounded_solid"
                android:layout_height="50dp">

            </Button>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>