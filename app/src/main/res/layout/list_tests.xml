<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="80dp"
        android:src="@drawable/chevron_right_circle"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:id="@+id/view_all"
        android:visibility="gone"
        android:layout_height="80dp">
    </ImageView>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/white"
        android:layout_marginTop="5dp"
        android:id="@+id/cv_root"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="3dp"
        app:cardCornerRadius="@dimen/dim_15"
        android:elevation="@dimen/dim_15"
        app:cardBackgroundColor="@android:color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/White"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_discount"
                android:textColor="@color/White"
                android:text="-10%"
                android:background="@color/colorAccent"
                android:gravity="start"
                android:padding="5dp"
                android:textSize="@dimen/txt_small"
                android:visibility="gone"
                android:fontFamily="@font/opensansbold"
                android:layout_height="wrap_content">
            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_details"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_15"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
            <ImageView
                android:layout_width="@dimen/_100dp"
                android:src="@drawable/logo_black"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dim_15"
                android:layout_marginBottom="@dimen/dim_15"
                android:layout_height="wrap_content">

            </ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/dim_15"
        android:textSize="@dimen/txt_med"
        android:fontFamily="@font/opensansbold"
        android:textAlignment="center"
        android:text="Cholesterol Test"
        android:layout_height="wrap_content">
    </TextView>

    <LinearLayout
        android:layout_width="200dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim_15"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/tv_discount_price"
            android:textColor="@color/colorAccent"
            android:text="\u20B9400"
            android:textSize="@dimen/txt_big"
            android:fontFamily="@font/opensansbold"
            android:textAlignment="center"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>
    <Button
        android:layout_width="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Book Now"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/White"
        android:fontFamily="@font/opensansbold"
        android:textAllCaps="false"
        android:background="@drawable/rect_rounded_solid"
        android:layout_height="50dp">

    </Button>
</LinearLayout>