<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="3dp"
        android:padding="@dimen/dim_15"
        android:gravity="center"
        android:background="@drawable/rect_rounded_corner_border_pink"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:adjustViewBounds="true"
            android:id="@+id/img_logo"
            android:tint="@color/Black"
            android:src="@drawable/dummy_icon1"
            android:layout_height="50dp">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/Black"
            android:layout_marginTop="@dimen/dim_15"
            android:textSize="@dimen/txt_med"
            android:textAlignment="center"
            android:text="Infection"
            android:id="@+id/tv_title"
            android:fontFamily="@font/opensansbold"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/Gray"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/txt_small"
            android:id="@+id/tv_description"
            android:textAlignment="center"
            android:text="Amazein Labs 2022\nFull Body Checkup with\nVitamin Screening"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>
</RelativeLayout>